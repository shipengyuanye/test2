#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#include <string.h>

char a[1000][1000]={"0########################################",//41
                    " #     ##                   #           #",
			        " ##### ## ####### ######### # ######### #",
				    " ##     # #     # #       # # #       # #",
  				    " ## ###   # ### # # ##### #   # ####### #",
				    "    ####### #   # # ##  # #####         #",
				    "## #   #    # ##### ### # ##  ###### ## #",
				    "## ### # # ##           #####        ## #",
				    "##         #  ### #####      #######  # #",
				    "############ #    #   # #### #   #  # # #",
				    "#         # #  ###  # # #      #   ## # #",
				    "# ####### # # #    ##     ## ########## #",
				    "# #       # #   ############ #          #",
				    "# ##############             # ##########",
				    "#                ####### ## ## #      ###",
				    "################# #      ### # # # ######",
				    "#        ##     # # ####     #   # #   ##",
				    "# ######    #####       #### ##### ### ##",
				    "# ############### ########       #     ##",
				    "#                          #### #########",
				    "###############################          终点",};


int main()
{
	
	int x,y;
	char ch,z;
	x=0,y=0;
	system("color f0");
	printf("\n\n\n\t\t\t\t\t\t按任意键开始游戏      \n");
	getch();
	system ("cls");

	for(int d=0;d<21;d++)
	{
		puts(a[d]);
	}


	while(1)
	{
		ch=getch();
		if(ch=='w')
		{
			if(a[x-1][y]==' ')
			{
				a[x][y]=' ';
				x--;
				a[x][y]='0';
			}
		}
		else if(ch=='a')
		{
			if(a[x][y-1]==' ')
			{
				a[x][y]=' ';
				y--;
				a[x][y]='0';
			}
		}
		else if(ch=='s')
		{
			if(a[x+1][y]==' ')
			{
				a[x][y]=' ';
				x++;
				a[x][y]='0';
			}
		}
		else if(ch=='d')
		{
			if(a[x][y+1]==' ')
			{
				a[x][y]=' ';
				y++;
				a[x][y]='0';
			}
		}
		else if("x==17&&y==29");
		{
			a[x][y]==' ';
			a[0][0]=='0';
		}
		system ("cls");
		for(int d=0;d<21;d++)
		{
			puts(a[d]);
			if(d==20)
			{
				if(x==17&&y==29);
				{
					printf("触发陷阱了列^-^\n");
				}
				printf("\n当前坐标：x=%d	y=%d\n",y,x);
				printf("使用“w”“a”“s”“d”控制移动");
			}
		}

		if(x==20&&y==40)
		{
			system ("cls");
			printf("\n\n\n          胜利！游戏结束！\n\n");
			break;
		}
	}
	return 0;
}
